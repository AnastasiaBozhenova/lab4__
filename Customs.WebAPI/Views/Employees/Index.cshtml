@model X.PagedList.IPagedList<Customs.DAL.Models.Employee>
@using X.PagedList.Mvc.Core

@{ ViewData["Title"] = "Сотрудники"; }

<div class="container-xxl">
    <div class="table-wrapper">
        <div class="table-title mb-2 mt-2">
            <div class="row">
                <div class="col-sm-7">
                    <a asp-action="Create" class="btn btn-success">
                        <span>Добавить</span>
                    </a>
                </div>
                <div class="col-sm-4">
                    <input placeholder="Поиск по фамилии" id="searchInput" class="form-control">
                </div>
                <div class="col-sm-1">
                    <a class="btn btn-outline-info" id="searchBtn">
                        <span>Поиск</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Фамилия
                </th>
                <th>
                    Имя
                </th>
                <th>
                    Отчество
                </th>
                <th>
                    Номер удостоверения
                </th>
                <th>
                    Должность
                </th>
                <th>
                    Обслуживаемые склады
                </th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.MiddleName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.IdNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Role)
                    </td>
                    <td>
                        @if (item.EmployeeStorages.Any())
                        {
                            @: @string.Join(", ", item.EmployeeStorages.Select(x => x.Storage.Name))
                        }
                        else
                        {
                            @: Не обслуживает
                        }
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Редактирование</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Удаление</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <br />
        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

        @if (Model.PageCount > 1)
        {
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new X.PagedList.Web.Common.PagedListRenderOptions
            {
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" }
            })
        }
    </div>
</div>


@section Scripts
{
    <script>
        $("#searchBtn").click(function ()
        {
            const searchString = $("#searchInput").prop('value');
            const url = "/Employees/Index?searchString=" + searchString;
            window.location.replace("https://localhost:5001" + url);
        })
    </script>
}